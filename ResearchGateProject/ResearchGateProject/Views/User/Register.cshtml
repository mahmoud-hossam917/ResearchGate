<link href="~/Content/Designs/signupstyle.css" rel="stylesheet" />
@using (Html.BeginForm("Register", "User", FormMethod.Post))
{


    <!DOCTYPE html>
    <html>
    <head>
        <title>form</title>
        <link rel="stylesheet" type="text/css">
    </head>


    <body>



        <!-- page Content -->
        <div class="flex">


            <div class="Signup">
                <h1 class="Signup-header">Sign up</h1>
                <!-- form action & method     -->
                <form class="Signup-container" action="" method="get">
                    <!--  form inputs  -->
                    <p><input type="text" name="Name" placeholder="First name" required></p>
                    <p><input type="password" name="password" placeholder="Password" required></p>
                    <p><input type="email" name="email" placeholder="Email" required></p>
                    <p><input type="text" name="university" placeholder="University" required></p>
                    <p><input type="text" name="department" placeholder="department" required></p>
                    <p><input type="text" name="age" placeholder="age" required></p>
                    <p><input type="text" name="phoneNumber" placeholder="phone" required></p>
                    <p><input type="text" name="adderss" placeholder="address" required></p>
                    <label><h2 style="color:black; font-wieght:bold;">UPLOAD YOUR PHOTO<h2></label>
                    <input type="file">
                    <!-- submit button  -->
                    <p><input type="submit" name="submit"></p>
                </form>
            </div>
        </div>
    </body>
</html>


}